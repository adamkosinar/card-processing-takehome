{
  "name": "card-processing-takehome",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "npm": ">=8.13.2",
    "node": ">=18.5.0"
  },
  "scripts": {
    "build": "npm run tsc && npm run eslint --fix",
    "start": "npm run build && node ./dist/index.js",
    "eslint": "eslint \"**/*.ts\"",
    "test": "rimraf dist coverage && npm run eslint && jest",
    "tsc": "tsc"
  },
  "author": "Adam Kosinar",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^28.1.5",
    "@typescript-eslint/eslint-plugin": "5.30.6",
    "@typescript-eslint/parser": "5.30.6",
    "eslint": "^8.19.0",
    "jest": "^28.1.2",
    "jest-fetch-mock": "^3.0.3",
    "jest-sonar-reporter": "^2.0.0",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@fastify/cors": "^8.2.0",
    "fastify": "^4.12.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testResultsProcessor": "jest-sonar-reporter",
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/config.{ts,tsx}",
      "!src/**/theme.{ts,tsx}",
      "!src/**/index.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*Mock.ts",
      "!src/**/*Provider.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 96,
        "functions": 96,
        "lines": 96,
        "statements": 96
      }
    }
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
